{
    "name": "luciansabo/fields-options",
    "description": "Standard format for retrieving nested fields and field options in RESTful APIs",
    "type": "library",
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "vimeo/psalm": "^6.14",
        "squizlabs/php_codesniffer": "^4"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Lucian\\FieldsOptions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lucian\\FieldsOptions\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@composer install",
            "phpunit",
            "psalm",
            "phpcs --standard=phpcs.xml src tests"
        ]
    },
    "authors": [
        {
            "name": "Lucian Sabo",
            "email": "luciansabo@gmail.com"
        }
    ]
}
